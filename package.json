    "@kadira/storybook-channel": "^1.1.0",
    "babel-cli": "^6.14.0",
    "babel-jest": "^16.0.0",
    "babel-preset-react-app": "^1.0.0",
    "cz-conventional-changelog": "^1.2.0",
    "jest": "^16.0.0",
    "react": "^15.3.1",
    "react-addons-test-utils": "^15.3.2",
